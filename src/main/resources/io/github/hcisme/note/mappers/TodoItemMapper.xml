            </if>
        </trim>
    </insert>

    <!-- 添加（批量插入）-->
    <insert id="insertBatch" parameterType="TodoItem">
        INSERT INTO todo_item(
        id,
        user_id,
        title,
        content,
        is_completed,
        created_time,
        updated_time
        )values
        <foreach collection="list" item="item" separator=",">
            (
            #{item.id},
            #{item.userId},
            #{item.title},
            #{item.content},
            #{item.completed},
            #{item.createdTime},
            #{item.updatedTime}
            )
        </foreach>
    </insert>

    <!-- 批量新增修改（批量插入）-->
    <insert id="insertOrUpdateBatch" parameterType="TodoItem">
        INSERT INTO todo_item(
        id,
