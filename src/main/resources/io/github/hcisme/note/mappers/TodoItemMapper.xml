                #{bean.createdTime},
            </if>
            <if test="bean.updatedTime!=null">
                #{bean.updatedTime},
            </if>
        </trim>
    </insert>

    <!-- 插入或者更新（匹配有值的字段）-->
    <insert id="insertOrUpdate" parameterType="TodoItem">
        INSERT INTO todo_item
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="bean.id != null">
                id,
            </if>
            <if test="bean.userId != null">
                user_id,
            </if>
