<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.github.hcisme.note.mappers.TodoItemMapper">

    <!--实体映射-->
    <resultMap id="base_result_map" type="TodoItem">
        <!---->
        <id column="id" property="id"/>
        <!--创建者ID-->
        <result column="user_id" property="userId"/>
        <!--标题-->
        <result column="title" property="title"/>
        <!--内容-->
        <result column="content" property="content"/>
        <!--是否完成 (0-未完成, 1-已完成)-->
        <result column="is_completed" property="isCompleted"/>
        <!--开始时间-->
        <result column="start_time" property="startTime"/>
        <!--结束时间-->
        <result column="end_time" property="endTime"/>
        <!--创建时间-->
        <result column="created_time" property="createdTime"/>
        <!--最后修改时间-->
        <result column="updated_time" property="updatedTime"/>
    </resultMap>


    <!-- 通用查询结果列-->
    <sql id="base_column_list">
        t.id,t.user_id,t.title,t.content,t.is_completed,
		 t.start_time,t.end_time,t.created_time,t.updated_time
    </sql>

    <sql id="base_condition_filed">
        <if test="query.id != null">
            and t.id = #{query.id}
        </if>
        <if test="query.userId != null and query.userId!=''">
            and t.user_id = #{query.userId}
        </if>
        <if test="query.title != null and query.title!=''">
            and t.title = #{query.title}
        </if>
        <if test="query.content != null and query.content!=''">
            and t.content = #{query.content}
        </if>
        <if test="query.isCompleted != null">
            and t.is_completed = #{query.isCompleted}
        </if>
        <if test="query.startTime != null and query.startTime!=''">
            <![CDATA[ and  t.start_time=str_to_date(#{query.startTime}, '%Y-%m-%d') ]]>
        </if>
        <if test="query.endTime != null and query.endTime!=''">
            <![CDATA[ and  t.end_time=str_to_date(#{query.endTime}, '%Y-%m-%d') ]]>
        </if>
        <if test="query.createdTime != null and query.createdTime!=''">
            <![CDATA[ and  t.created_time=str_to_date(#{query.createdTime}, '%Y-%m-%d') ]]>
        </if>
        <if test="query.updatedTime != null and query.updatedTime!=''">
            <![CDATA[ and  t.updated_time=str_to_date(#{query.updatedTime}, '%Y-%m-%d') ]]>
        </if>
    </sql>
    <!-- 通用条件列-->
    <sql id="base_condition">
        <where>
            <include refid="base_condition_filed"/>
        </where>
    </sql>

    <!-- 通用查询条件列-->
    <sql id="query_condition">
        <where>
            <include refid="base_condition_filed"/>
            <if test="query.userIdFuzzy!= null  and query.userIdFuzzy!=''">
                and t.user_id like concat('%', #{query.userIdFuzzy}, '%')
            </if>
            <if test="query.titleFuzzy!= null  and query.titleFuzzy!=''">
                and t.title like concat('%', #{query.titleFuzzy}, '%')
            </if>
            <if test="query.contentFuzzy!= null  and query.contentFuzzy!=''">
                and t.content like concat('%', #{query.contentFuzzy}, '%')
            </if>
            <if test="query.startTimeStart!= null and query.startTimeStart!=''">
                <![CDATA[ and  t.start_time>=str_to_date(#{query.startTimeStart}, '%Y-%m-%d') ]]>
            </if>
            <if test="query.startTimeEnd!= null and query.startTimeEnd!=''">
                <![CDATA[ and  t.start_time< date_sub(str_to_date(#{query.startTimeEnd},'%Y-%m-%d'),interval -1 day) ]]>
            </if>
            <if test="query.endTimeStart!= null and query.endTimeStart!=''">
                <![CDATA[ and  t.end_time>=str_to_date(#{query.endTimeStart}, '%Y-%m-%d') ]]>
            </if>
            <if test="query.endTimeEnd!= null and query.endTimeEnd!=''">
                <![CDATA[ and  t.end_time< date_sub(str_to_date(#{query.endTimeEnd},'%Y-%m-%d'),interval -1 day) ]]>
            </if>
            <if test="query.createdTimeStart!= null and query.createdTimeStart!=''">
                <![CDATA[ and  t.created_time>=str_to_date(#{query.createdTimeStart}, '%Y-%m-%d') ]]>
            </if>
            <if test="query.createdTimeEnd!= null and query.createdTimeEnd!=''">
                <![CDATA[ and  t.created_time< date_sub(str_to_date(#{query.createdTimeEnd},'%Y-%m-%d'),interval -1 day) ]]>
            </if>
            <if test="query.updatedTimeStart!= null and query.updatedTimeStart!=''">
                <![CDATA[ and  t.updated_time>=str_to_date(#{query.updatedTimeStart}, '%Y-%m-%d') ]]>
            </if>
            <if test="query.updatedTimeEnd!= null and query.updatedTimeEnd!=''">
                <![CDATA[ and  t.updated_time< date_sub(str_to_date(#{query.updatedTimeEnd},'%Y-%m-%d'),interval -1 day) ]]>
            </if>
        </where>
    </sql>

    <!-- 查询集合-->
    <select id="selectList" resultMap="base_result_map">
        SELECT
        <include refid="base_column_list"/>
        FROM todo_item t
        <include refid="query_condition"/>
        <if test="query.orderBy!=null">
            order by ${query.orderBy}
        </if>
        <if test="query.simplePage!=null">
            limit #{query.simplePage.start},#{query.simplePage.end}
        </if>
    </select>

    <!-- 查询数量-->
    <select id="selectCount" resultType="java.lang.Integer">
        SELECT count(1) FROM todo_item t
        <include refid="query_condition"/>
    </select>

    <!-- 插入 （匹配有值的字段）-->
