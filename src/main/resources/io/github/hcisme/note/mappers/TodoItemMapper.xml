                is_completed,
            </if>
            <if test="bean.createdTime != null">
                created_time,
            </if>
            <if test="bean.updatedTime != null">
                updated_time,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="bean.id!=null">
                #{bean.id},
            </if>
            <if test="bean.userId!=null">
                #{bean.userId},
