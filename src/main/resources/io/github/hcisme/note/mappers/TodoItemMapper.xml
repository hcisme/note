        title = VALUES(title),
        content = VALUES(content),
        is_completed = VALUES(is_completed),
        created_time = VALUES(created_time),
        updated_time = VALUES(updated_time)
    </insert>

    <!--多条件修改-->
    <update id="updateByParam" parameterType="TodoItemQuery">
        UPDATE todo_item t
        <set>
            <if test="bean.id != null">
                id = #{bean.id},
            </if>
            <if test="bean.userId != null">
                user_id = #{bean.userId},
            </if>
            <if test="bean.title != null">
                title = #{bean.title},
            </if>
            <if test="bean.content != null">
                content = #{bean.content},
            </if>
            <if test="bean.completed != null">
                is_completed = #{bean.completed},
            </if>
            <if test="bean.createdTime != null">
                created_time = #{bean.createdTime},
            </if>
            <if test="bean.updatedTime != null">
                updated_time = #{bean.updatedTime},
            </if>
        </set>
        <include refid="query_condition"/>
    </update>

    <!--多条件删除-->
    <delete id="deleteByParam">
        delete t from todo_item t
        <include refid="query_condition"/>
    </delete>

</mapper>